<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.jfeat</groupId>
    <artifactId>code-generator</artifactId>
    <version>1.0.0</version>

    <properties>
        <moduleName>test</moduleName>
        <url>jdbc:mysql://ok.zele.pro/test?user=root&amp;password=root&amp;characterEncoding=utf8</url>
        <init>false</init>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.jfeat</groupId>
                <artifactId>sb-code-generator</artifactId>
                <version>1.2.3</version>
                <configuration>
                    <moduleName>${moduleName}</moduleName>
                    <dbUrl>${url}</dbUrl>
                    <initialize>${init}</initialize>
                    <tables>
                        <table>peerTable</table>
                        <table>masterTable</table>
                    </tables>
                    
                    <cruds>
                        <crud>
                            <!--mask: master,group,peer-->
                            <mask>master</mask>
                            <master>master_table_name</master>
                            <masterId>master_id_field_in_slave_table</masterId>
                            <slaves>
                                <slave>slave_table_name</slave>
                             </slaves>
                            <children>
                               <child>child_table_name</child>
                            </children>
                            <group>group_table_name</group>
                            <groupBy>groupBy_table_name</groupBy>
                            <masterPeer>master_peer_table_name</masterPeer>
                            <relation>relation_table_name</relation>
                        </crud>
                    </cruds>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
